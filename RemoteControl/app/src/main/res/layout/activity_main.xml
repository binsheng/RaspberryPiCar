<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.bins.remotecontrol.ui.MainActivity">


    <EditText
        android:id="@+id/et_ip"
        android:hint="@string/please_input_ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:id="@+id/et_port"
        android:hint="@string/please_input_ip_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_conn"
        android:text="@string/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.dev.bins.remotecontrol.widget.ControlView
        android:layout_width="200dp"
        android:layout_height="200dp" />
</LinearLayout>
